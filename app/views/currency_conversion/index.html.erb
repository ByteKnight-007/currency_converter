<%= form_tag(convert_currency_path, method: 'post') do %>
  <%= label_tag 'Base Currency' %>
  <%= select_tag 'from_currency', options_for_select(CurrencyConstants::AVAILABLE_CURRENCIES), class: 'select2' %>

  <%= label_tag 'Target Currency' %>
  <%= select_tag 'to_currency', options_for_select(CurrencyConstants::AVAILABLE_CURRENCIES), class: 'select2' %>

  <%= label_tag 'Amount' %>
  <%= text_field_tag 'amount', class: 'amount-field' %>

  <%= submit_tag 'Convert' %>
<% end %>